#!/usr/bin/env bash

if [[ "$OSTYPE" == "darwin"*  ]]; then
    SED=gsed
else
    SED=sed
fi

set -e

if [ -n "${CIRRUS_TAG}" ]; then
    BRANCH=${CIRRUS_TAG}
fi

if [ -z "${BRANCH}" ]; then
    BRANCH=$(git rev-parse --abbrev-ref HEAD)
fi

if [ "${BRANCH}" == "master" ]; then
    BRANCH=latest
fi

echo "${BRANCH}" | ${SED} -r 's!^.*/!!g'
